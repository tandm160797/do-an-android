<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiVertical_0.05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiVertical_0.35"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiVertical_0.35"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiVertical_0.8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiHorizontal_0.1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiHorizontal_0.9"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9">

    </androidx.constraintlayout.widget.Guideline>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/guiVertical_0.35"
        app:layout_constraintEnd_toStartOf="@id/guiHorizontal_0.9"
        app:layout_constraintStart_toEndOf="@id/guiHorizontal_0.1"
        app:layout_constraintTop_toBottomOf="@id/guiVertical_0.05">

        <ImageView
            android:id="@+id/imgUserAvata"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_user_default"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintBottom_toTopOf="@+id/guiVertical_0.35"
        app:layout_constraintEnd_toStartOf="@id/guiHorizontal_0.9"
        app:layout_constraintStart_toEndOf="@id/guiHorizontal_0.1"
        app:layout_constraintTop_toBottomOf="@id/guiVertical_0.35">

        <TextView
            android:id="@+id/txtDoiHinhDaiDien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:linksClickable="true"
            android:paddingTop="10dp"
            android:text="default"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="5"
        app:layout_constraintBottom_toTopOf="@+id/guiVertical_0.8"
        app:layout_constraintEnd_toStartOf="@id/guiHorizontal_0.9"
        app:layout_constraintStart_toEndOf="@id/guiHorizontal_0.1"
        app:layout_constraintTop_toBottomOf="@id/guiVertical_0.35">

        <EditText
            android:id="@+id/edtTenDangNhap"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/border_radius_edit_text"
            android:enabled="false"
            android:text="ten_dang_nhap">

        </EditText>

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/border_radius_edit_text"
            android:enabled="false"
            android:text="email@gmail.com">

        </EditText>

        <EditText
            android:id="@+id/edtDoiMatKhau"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/border_radius_edit_text"
            android:hint="Đổi mật khẩu"
            android:inputType="textPassword">

        </EditText>

        <EditText
            android:id="@+id/edtXacNhanDoiMatKhau"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/border_radius_edit_text"
            android:hint="Xác nhận đổi mật khẩu"
            android:inputType="textPassword">

        </EditText>

        <Button
            android:id="@+id/btnMuaCredit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/border_radius_button_blue"
            android:text="Cập nhật"
            android:textAllCaps="false"
            android:textColor="#FFFFFF">

        </Button>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>