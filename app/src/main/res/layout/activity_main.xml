<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiVertical_0.05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiVertical_0.35"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiVertical_0.35"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiVertical_0.8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiHorizontal_0.1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1">

    </androidx.constraintlayout.widget.Guideline>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guiHorizontal_0.9"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9">

    </androidx.constraintlayout.widget.Guideline>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/guiVertical_0.35"
        app:layout_constraintEnd_toStartOf="@id/guiHorizontal_0.9"
        app:layout_constraintStart_toEndOf="@id/guiHorizontal_0.1"
        app:layout_constraintTop_toBottomOf="@id/guiVertical_0.05">

        <ImageView
            android:id="@+id/imgUserAvata"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_user_default"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="2"
        app:layout_constraintBottom_toTopOf="@+id/guiVertical_0.35"
        app:layout_constraintEnd_toStartOf="@id/guiHorizontal_0.9"
        app:layout_constraintStart_toEndOf="@id/guiHorizontal_0.1"
        app:layout_constraintTop_toBottomOf="@id/guiVertical_0.35">

        <TextView
            android:id="@+id/txtHoTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:text="default"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium">

        </TextView>

        <TextView
            android:id="@+id/txtCredit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_credit"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="1997"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="5"
        app:layout_constraintBottom_toTopOf="@+id/guiVertical_0.8"
        app:layout_constraintEnd_toStartOf="@id/guiHorizontal_0.9"
        app:layout_constraintStart_toEndOf="@id/guiHorizontal_0.1"
        app:layout_constraintTop_toBottomOf="@id/guiVertical_0.35">

        <Button
            android:id="@+id/btnQuanLyTaiKhoan"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/border_radius_button_green"
            android:text="Quản lý tài khoản"
            android:textAllCaps="false"
            android:textColor="#FFFFFF">

        </Button>

        <Button
            android:id="@+id/btnTroChoiMoi"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/border_radius_button_blue"
            android:text="Trò chơi mới"
            android:textAllCaps="false"
            android:textColor="#FFFFFF">

        </Button>

        <Button
            android:id="@+id/btnLichSuChoi"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/border_radius_button_yellow"
            android:text="Lịch sử chơi"
            android:textAllCaps="false"
            android:textColor="#FFFFFF">

        </Button>

        <Button
            android:id="@+id/btnBangXepHang"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/border_radius_button_pink"
            android:text="Bảng xếp hạng"
            android:textAllCaps="false"
            android:textColor="#FFFFFF">

        </Button>

        <Button
            android:id="@+id/btnMuaCredit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@drawable/border_radius_button_red"
            android:text="Mua credit"
            android:textAllCaps="false"
            android:textColor="#FFFFFF">

        </Button>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>